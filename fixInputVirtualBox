#sudo apt-get install portaudio19-dev python-all-dev python3-all-dev && sudo pip install pyaudio
pulseaudio -k && sudo alsa force-reload
editei  sudo nano /usr/share/alsa/alsa.conf e pus alguns defaults:
	pcm.default cards.pcm.default
	pcm.sysdefault cards.pcm.default
	pcm.front cards.pcm.front
	pcm.rear cards.pcm.default
	pcm.center_lfe cards.pcm.default
	pcm.side cards.pcm.default
	pcm.surround21 cards.pcm.surround21
	pcm.surround40 cards.pcm.surround40
	pcm.surround41 cards.pcm.surround41
	pcm.surround50 cards.pcm.surround50
	pcm.surround51 cards.pcm.surround51
	pcm.surround71 cards.pcm.surround71
	pcm.iec958 cards.pcm.iec958
	pcm.spdif iec958
	pcm.hdmi cards.pcm.default
	pcm.dmix cards.pcm.dmix
	pcm.dsnoop cards.pcm.dsnoop
	pcm.modem cards.pcm.default
	pcm.phoneline cards.pcm.default
editei  sudo nano /etc/modprobe.d/alsa-base.conf para q usb executasse antes :   options snd-usb-audio index=0
